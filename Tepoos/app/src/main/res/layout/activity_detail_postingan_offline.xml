<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/detail_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".DetailPostinganActivity">
    <LinearLayout
        android:id="@+id/toolbar"
        android:orientation="horizontal"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:elevation="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tepOOs"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/primary"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/foto_profile"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_account_circle_black"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/nama_user"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="5"
                    android:gravity="center|left"
                    android:textColor="#4682B4"
                    android:textStyle="bold"
                    android:text="Nama User"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/foto_postingan"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:src="@drawable/example_postingan"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tgl_postingan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 Oktober 2020 | 18.00"
                    android:textStyle="bold"
                    android:textColor="#4682B4"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kejadian penyosoran paksa terjadi di Jalan Ahmad Yani, Denpasar. Pelaku adalah seorang mahasiswa semester 5 dan korban merupakan pacarnya sendiri. Keduanya kini sudah digiring ke kantor polisi untuk menjalani pemeriksaan."
                    android:layout_gravity="center_vertical|end"
                    android:textColor="#000000"
                    android:layout_marginTop="7dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>