<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/detail_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".DetailPostinganActivity"
    tools:deviceIds="wear">
    <LinearLayout
        android:id="@+id/toolbar"
        android:orientation="horizontal"
        android:background="#4682B4"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tepOOs"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#F0E68C"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/image_postingan"
                android:layout_width="200dp"
                android:layout_height="350dp"
                android:src="@drawable/upload_image"
                android:layout_margin="20dp"/>
            <Button
                android:id="@+id/btn_upload_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Gambar"
                android:background="@drawable/btn_primary"
                android:paddingHorizontal="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caption"
                    android:layout_marginBottom="10dp"
                    android:textSize="18dp"/>
                <EditText
                    android:id="@+id/caption_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:paddingVertical="8dp"
                    android:minLines="5"
                    android:gravity="top|left"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:hint="Ketikan Sesuatu"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_upload_postingan"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_primary"
                    android:layout_marginBottom="10dp"
                    android:text="Update Postingan"/>
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_primary"
                    android:layout_marginBottom="10dp"
                    android:text="Delete Postingan"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>